<head>
	<link rel="stylesheet" href="/stylesheets/style2.css">
</head>

<body>
	<div class="container">
		<div class="row">
			<div class="col-md-5">
				<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
					<div class="carousel-inner">
						<div class="carousel-item active">
							<img class="d-block w-100" src="/product-images/{{this.product._id}}.jpg" alt="First slide">
						</div>
						
						<div class="carousel-item">
							{{#each productImageUrls as |item|}}
							<img class="d-block w-100" src="{{item}}" alt="Second slide">
							{{/each}}
						</div>
						
					</div>
					<a class="carousel-control-prev" href="#" role="button" data-slide="prev"></a>
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#" role="button" data-slide="next" data-interval="false">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<div class="col-md-7" style="position:absolute; left:630px; top:30px;">
				<p class="newarrival text-center">NEW</p>
				<h2>{{this.product.Name}}</h2>
				<div class="product-rating">
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star"></i>
					<i class="fas fa-star-half-alt"></i>
					<span>4.7(21)</span>
				</div>
				<div class="product-price">
					<p class="price">Price: <span>{{this.product.price}}</span></p>
				</div>
				<div class="product-detail">
					<h2>About this item: </h2>
					<p>{{this.product.longDescription}}</p>
					<p>{{this.product.description}}</p>
					<ul>
						<li>Color: <span>{{this.product.color}}</span></li>
						<li>Available: <span>In stock</span></li>
						<li>Category: <span>{{this.product.category}}</span></li>
						<li>Shipping Area: <span>{{this.product.delivery}}</span></li>
						<li>Shipping Fee: <span>Free</span></li>
					</ul>
				</div>
				<div class="purchase-info">
					<button type="button" onclick="addToCart('{{this.product._id}}')" class="btn">
						Add to Cart <i class="fas fa-shopping-cart"></i>
					</button>
				</div>
				<div class="social-links">
					<p>Share At: </p>
					<a href="#">
						<i class="fab fa-facebook-f"></i>
					</a>
					<a href="#">
						<i class="fab fa-twitter"></i>
					</a>
					<a href="#">
						<i class="fab fa-instagram"></i>
					</a>
					<a href="#">
						<i class="fab fa-whatsapp"></i>
					</a>
					<a href="#">
						<i class="fab fa-pinterest"></i>
					</a>
				</div>
			</div>


		</div>
	</div>
</body>

