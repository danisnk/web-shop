
    
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3 d-flex justify-content-center justify-content-md-start">
                    <div class="card " style="width: 16rem">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap"
                            style="height:15rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">â‚¹  {{this.price}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <button onclick="addToCart('{{this._id}}')" class="button is-info">Add to cart</button>
                            <a href="/product-page/{{this._id}}"  >View Product</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    

 

