<section>
    <div class="container mt-4">
        <div class="row">


            <div class="col-md-6">
                <h2 class="text-center">Update profile</h2>
                <form action="/edit-profile/{{this.userDetails._id}}" method="POST" enctype="multipart/form-data">
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{this.userDetails.Name}}">

                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control" value="{{this.userDetails.Email}}">

                    <label for="">Mobile</label>
                    <input type="texts" name="Mobile" class="form-control" value={{this.userDetails.Mobile}}>

                    <label for="">Profile</label>
                    <img src="/profile-images/{{this.userDetails._id}}.jpg" alt="" style="width: 100px" id="imgView" class="pt-3">
                    <input type="file" class="form-control" name="Image" onchange="viewImage(event)">

                    <button type="submit" class="btn btn-success mt-4" onclick="return confirm('Do you want to update')">Update</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
    }
</script>